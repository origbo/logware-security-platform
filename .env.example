# Application
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8080/api

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# MongoDB
MONGODB_URI=mongodb://localhost:27017/logware
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your_csrf_secret_key_here
CSP_REPORT_URI=/api/csp-report

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# External Services Integration
MISP_URL=http://localhost:8181
MISP_API_KEY=your_misp_api_key_here

ALIENTVAULT_OTX_API_KEY=your_otx_api_key_here

SPLUNK_URL=http://localhost:8000
SPLUNK_API_KEY=your_splunk_api_key_here
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=password

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASSWORD=password
EMAIL_FROM=security@logware.com

# Two-Factor Authentication
MFA_ISSUER=Logware Security Platform

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# WebSocket
WS_PATH=/ws
WS_PORT=8081

# Vulnerability Scanner Integration
VULNERABILITY_SCANNER_URL=http://localhost:8082
VULNERABILITY_SCANNER_API_KEY=your_scanner_api_key_here

# Feature Flags
FEATURE_MACHINE_LEARNING=true
FEATURE_THREAT_INTELLIGENCE=true
FEATURE_USER_BEHAVIOR_ANALYTICS=true
FEATURE_COMPLIANCE_TRACKING=true
